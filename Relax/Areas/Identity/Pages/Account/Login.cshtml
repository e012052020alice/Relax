@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
}

@section Styles {
	<style>
		.bg-img {
			height: 750px;
			width: auto;
		}

		.contact-form {
			padding: 40px 30px;
		}

		p{
			margin-bottom:0px;
		}
	</style>
}

<section class="dorne-welcome-area bg-img bg-overlay" style="background-image: url(/relax/img/bg-img/hero-1.jpg);">
	<div class="container-fluid w-75">
		<div class="row h-100 align-items-center justify-content-center" style=" padding-top:160px">
			<div class="col-12 col-md-6 py-4">
				@* <h1 class="trans">@ViewData["Title"]</h1> *@
				<form id="account" method="post" class="contact-form">
					<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
					<div class="form-floating mb-3">
						<label asp-for="Input.UserName" class="form-label">@Html.DisplayNameFor(a => a.Input.UserName)</label>
						<span asp-validation-for="Input.UserName" class="text-danger"></span>
						<input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="UserName" />
					</div>
					<div class="form-floating mb-3">
						<label asp-for="Input.Password" class="form-label">@Html.DisplayNameFor(a => a.Input.Password)</label>
						<span asp-validation-for="Input.Password" class="text-danger"></span>
						<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
						@* <p class="mt-1">
							<a id="forgot-password" asp-page="./ForgotPassword">忘記密碼?</a>
						</p> *@
					</div>
					<div class="checkbox mb-2">
						<label asp-for="Input.RememberMe" class="form-label " style="margin-left:23px">
							<input class="form-check-input " asp-for="Input.RememberMe" />
							@Html.DisplayNameFor(m => m.Input.RememberMe)
						</label>
					</div>
					<div class="text-center">
						<button id="login-submit" type="submit" class="btn dorne-btn">登入</button>

					</div>
					<div>
						<p>
							<span>沒有帳號?</span><a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Model.ReturnUrl">註冊帳號</a>
						</p>
						@* <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p> *@
					</div>
				</form>

			</div>
		</div>
	</div>
</section>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}